<!DOCTYPE html>
<html>
  <!-- Head -->
  <%- include('./partials/head.ejs') %> 

  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/nav.ejs') %> 

    <!-- Header -->
    <%- include('./partials/header.ejs') %> 

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <div class="ps-row ps-padding-64" id="about">
        <div class="ps-col m6 ps-padding-large ps-hide-small">
          <img
            src="/images/principal.jpg"
            class="ps-round ps-image ps-opacity-min ps-image-main"
            alt="Sabores que enamoran"
            width="600"
            height="750"
          />
        </div>

        <div class="ps-col m6 ps-padding-large">
          <h1 class="ps-center"><%= about.title %> </h1>
          <br />
          <p class="ps-large">
            <%= about.top %> 
          </p>
          <p class="ps-large ps-text-grey ps-hide-medium">
            <%= about.bottom %> 
          </p>
        </div>
      </div>

      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuestro Menu</h1>
          <br />

          <% platos.forEach( plato => { %>
            <article class="menu-article">
              <h4 class="name"><a href="/detalle/<%= plato.id %>"><%= plato.name %></a></h4>
              <p class="ps-text-grey description">
                <%= plato.description %> 
              </p>
              <span class="price">U$S <%= plato.price.toFixed(2) %></span> 
            </article>
          <% }) %>

        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer.ejs') %> 

    </div>
  </body>
</html>
